<?xml version="1.0" encoding="utf-8"?>
<access component="com_uha">
    <!--
    UHA Component Access Control List (ACL)
    Defines permissions for different user groups
    -->

    <!-- Component-level actions -->
    <section name="component">
        <action name="core.admin" title="JACTION_ADMIN" description="JACTION_ADMIN_COMPONENT_DESC" />
        <action name="core.manage" title="JACTION_MANAGE" description="JACTION_MANAGE_COMPONENT_DESC" />
        <action name="core.create" title="JACTION_CREATE" description="JACTION_CREATE_DESC" />
        <action name="core.delete" title="JACTION_DELETE" description="JACTION_DELETE_DESC" />
        <action name="core.edit" title="JACTION_EDIT" description="JACTION_EDIT_DESC" />
        <action name="core.edit.state" title="JACTION_EDITSTATE" description="JACTION_EDITSTATE_DESC" />
        <action name="core.edit.own" title="JACTION_EDITOWN" description="JACTION_EDITOWN_DESC" />
    </section>

    <!-- Token-specific actions -->
    <section name="token">
        <action name="token.request"
                title="COM_UHA_ACTION_TOKEN_REQUEST"
                description="COM_UHA_ACTION_TOKEN_REQUEST_DESC">
            <allow group="registered" />
        </action>
        <action name="token.view.own"
                title="COM_UHA_ACTION_TOKEN_VIEW_OWN"
                description="COM_UHA_ACTION_TOKEN_VIEW_OWN_DESC">
            <allow group="registered" />
        </action>
        <action name="token.view.all"
                title="COM_UHA_ACTION_TOKEN_VIEW_ALL"
                description="COM_UHA_ACTION_TOKEN_VIEW_ALL_DESC">
            <allow group="manager" />
            <allow group="administrator" />
            <allow group="super users" />
        </action>
        <action name="token.approve"
                title="COM_UHA_ACTION_TOKEN_APPROVE"
                description="COM_UHA_ACTION_TOKEN_APPROVE_DESC">
            <allow group="administrator" />
            <allow group="super users" />
        </action>
        <action name="token.revoke"
                title="COM_UHA_ACTION_TOKEN_REVOKE"
                description="COM_UHA_ACTION_TOKEN_REVOKE_DESC">
            <allow group="administrator" />
            <allow group="super users" />
        </action>
    </section>

    <!-- Proof execution actions -->
    <section name="proof">
        <action name="proof.execute"
                title="COM_UHA_ACTION_PROOF_EXECUTE"
                description="COM_UHA_ACTION_PROOF_EXECUTE_DESC">
            <allow group="registered" />
        </action>
        <action name="proof.view.all"
                title="COM_UHA_ACTION_PROOF_VIEW_ALL"
                description="COM_UHA_ACTION_PROOF_VIEW_ALL_DESC">
            <allow group="manager" />
            <allow group="administrator" />
            <allow group="super users" />
        </action>
    </section>

    <!-- Documentation actions -->
    <section name="docs">
        <action name="docs.view"
                title="COM_UHA_ACTION_DOCS_VIEW"
                description="COM_UHA_ACTION_DOCS_VIEW_DESC">
            <allow group="public" />
        </action>
        <action name="docs.edit"
                title="COM_UHA_ACTION_DOCS_EDIT"
                description="COM_UHA_ACTION_DOCS_EDIT_DESC">
            <allow group="administrator" />
            <allow group="super users" />
        </action>
    </section>
</access>
