<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="api"
              label="COM_UHA_CONFIG_API_LABEL"
              description="COM_UHA_CONFIG_API_DESC">

        <field name="django_api_endpoint"
               type="text"
               label="COM_UHA_CONFIG_DJANGO_API_ENDPOINT_LABEL"
               description="COM_UHA_CONFIG_DJANGO_API_ENDPOINT_DESC"
               default="https://got.gitgap.org/api"
               size="60"
               filter="url"
               required="true" />

        <field name="api_timeout"
               type="number"
               label="COM_UHA_CONFIG_API_TIMEOUT_LABEL"
               description="COM_UHA_CONFIG_API_TIMEOUT_DESC"
               default="30"
               min="5"
               max="300"
               step="1"
               required="true" />

        <field name="cache_duration"
               type="number"
               label="COM_UHA_CONFIG_CACHE_DURATION_LABEL"
               description="COM_UHA_CONFIG_CACHE_DURATION_DESC"
               default="3600"
               min="60"
               max="86400"
               step="60"
               required="true" />

    </fieldset>

    <fieldset name="tokens"
              label="COM_UHA_CONFIG_TOKENS_LABEL"
              description="COM_UHA_CONFIG_TOKENS_DESC">

        <field name="auto_approve_academic"
               type="radio"
               label="COM_UHA_CONFIG_AUTO_APPROVE_ACADEMIC_LABEL"
               description="COM_UHA_CONFIG_AUTO_APPROVE_ACADEMIC_DESC"
               default="1"
               class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="academic_email_domains"
               type="textarea"
               label="COM_UHA_CONFIG_ACADEMIC_DOMAINS_LABEL"
               description="COM_UHA_CONFIG_ACADEMIC_DOMAINS_DESC"
               default=".edu&#13;&#10;.ac.uk&#13;&#10;.edu.au"
               rows="5"
               cols="40"
               filter="raw" />

        <field name="default_daily_limit_academic"
               type="number"
               label="COM_UHA_CONFIG_DEFAULT_LIMIT_ACADEMIC_LABEL"
               description="COM_UHA_CONFIG_DEFAULT_LIMIT_ACADEMIC_DESC"
               default="1000"
               min="100"
               max="10000"
               step="100" />

        <field name="default_daily_limit_commercial"
               type="number"
               label="COM_UHA_CONFIG_DEFAULT_LIMIT_COMMERCIAL_LABEL"
               description="COM_UHA_CONFIG_DEFAULT_LIMIT_COMMERCIAL_DESC"
               default="10000"
               min="1000"
               max="100000"
               step="1000" />

    </fieldset>

    <fieldset name="notifications"
              label="COM_UHA_CONFIG_NOTIFICATIONS_LABEL"
              description="COM_UHA_CONFIG_NOTIFICATIONS_DESC">

        <field name="email_notifications"
               type="radio"
               label="COM_UHA_CONFIG_EMAIL_NOTIFICATIONS_LABEL"
               description="COM_UHA_CONFIG_EMAIL_NOTIFICATIONS_DESC"
               default="0"
               class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="admin_notification_email"
               type="email"
               label="COM_UHA_CONFIG_ADMIN_EMAIL_LABEL"
               description="COM_UHA_CONFIG_ADMIN_EMAIL_DESC"
               default=""
               size="40"
               filter="email" />

    </fieldset>

    <fieldset name="proof"
              label="COM_UHA_CONFIG_PROOF_LABEL"
              description="COM_UHA_CONFIG_PROOF_DESC">

        <field name="enable_proof_runner"
               type="radio"
               label="COM_UHA_CONFIG_ENABLE_PROOF_RUNNER_LABEL"
               description="COM_UHA_CONFIG_ENABLE_PROOF_RUNNER_DESC"
               default="1"
               class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="proof_script_path"
               type="text"
               label="COM_UHA_CONFIG_PROOF_SCRIPT_PATH_LABEL"
               description="COM_UHA_CONFIG_PROOF_SCRIPT_PATH_DESC"
               default="/path/to/api_cryptographic_proof_system.py"
               size="60"
               filter="path" />

        <field name="max_proof_execution_time"
               type="number"
               label="COM_UHA_CONFIG_MAX_PROOF_TIME_LABEL"
               description="COM_UHA_CONFIG_MAX_PROOF_TIME_DESC"
               default="300"
               min="60"
               max="3600"
               step="30" />

    </fieldset>

    <fieldset name="permissions"
              label="COM_UHA_CONFIG_PERMISSIONS_LABEL"
              description="COM_UHA_CONFIG_PERMISSIONS_DESC">

        <field name="rules"
               type="rules"
               label="COM_UHA_CONFIG_RULES_LABEL"
               validate="rules"
               filter="rules"
               component="com_uha"
               section="component" />

    </fieldset>
</config>
