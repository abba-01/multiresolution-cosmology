# UHA API Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Required: Your email address for API access
UHA_EMAIL=your.email@university.edu

# Optional: User information
UHA_USER_NAME=Your Full Name
UHA_INSTITUTION=Your University or Institution
UHA_ACCESS_TIER=academic
UHA_DAILY_LIMIT=1000
UHA_USE_CASE=Multi-resolution cosmological analysis research

# Optional: API mode
# Set to False to use real API, True for offline/demo mode
UHA_OFFLINE_MODE=True

# Optional: Production API endpoint
# Set to True to use production API (api.aybllc.org)
# Set to False to use test API (got.gitgap.org)
UHA_USE_PRODUCTION=False
